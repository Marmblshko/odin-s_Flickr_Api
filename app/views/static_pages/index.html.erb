<div class="container mt-5 d-flex justify-content-center">
  <%= link_to "Home", root_path, class: "text-blue-500 hover:text-blue-700" %>
  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <div class="bg-white shadow p-5 text-monospace">
    <%= form_with url: static_pages_path, method: :get, class: "mt-4 mb-4" do |f| %>
      <div class="flex items-center justify-center">
        <div class="mb-4">
          <%= f.label :user_id, "Enter User ID to see photo", class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :user_id, placeholder: "User Id", required: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <%= f.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline ml-4" %>
      </div>
    <% end %>
  </div>

  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 md:grid-cols-4 gap-4 justify-center pt-5">
    <% @photos.each do |p| %>
      <div class="mb-3">
        <%= image_tag(Flickr.url_n(p), class: "mb-4") %>
      </div>
    <% end %>
  </div>
</div>
